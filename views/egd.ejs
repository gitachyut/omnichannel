<!doctype html>
<html>
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>News Search - Data Aggregation</title>
    <style type="text/css">
        body {
            margin: 0;
            padding: 0;
            width: 80%;
            margin: 50px auto 100px;
        }
        #json-input {
            display: block;
            width: 100%;
            height: 200px;
        }
        #translate {
            display: block;
            height: 28px;
            margin: 20px 0;
            border-radius: 3px;
            border: 2px solid;
            cursor: pointer;
        }
        #json-display {
            border: 1px solid #000;
            margin: 0;
            padding: 10px 20px;
        }
        .row{
          display: flex;
        }
        .group{
          margin: 5px;
        }
    </style>
</head>
<body>

<script type="text/javascript"  src="js/jquery-3.3.1.min.js" ></script>
<script type="text/javascript" src="/js/jquery.json-editor.min.js"></script>
<h1>News Search Api tester</h1>
    <div class="filter">
      <form action="">
        <div class="row">
            <div class="group">
                <label for="sns">Plateform</label>
                <select name="sns" id="">
                  <option value="twitter">Twitter</option>
                  <option value="Instagram">Instagram</option>
                  <option value="Reddit">Reddit</option>
                  <option value="Youtube">Youtube</option>
                  <option value="Webhose">Webhose</option>
                </select>
            </div>
    
            <div class="group">
                <label for="keyword">Keyword</label>
                <input type="text" name="keyword">
            </div>

            <div class="group">
                <button id="load">Load Data</button>
            </div>

        </div>


      </form>
    </div>
    <pre id="json-display"></pre>
    <script type="text/javascript">
        var editor = new JsonEditor('#json-display');
        $('#load').on('click', function (e) {
            e.preventDefault()
            $.get('/api/twitter',(data)=>{
              try {
                editor.load(data);
              } catch(err) {
                alert('Something went wrong plases try something else!');
              }
            })
        })
    </script>
</body>
</html>
